import { useState } from 'react';

function App() {
  const [formData, setFormData] = useState({
    nome: '',
    telefone: '',
    email: '',
    interesse: 'venda'
  });
  
  const [submissionStatus, setSubmissionStatus] = useState('idle');
  const [activeService, setActiveService] = useState('inicial');

  const handleInputChange = (e) => {
    setFormData({
      ...formData,
      [e.target.name]: e.target.value
    });
  };

  const handleSubmit = async (e) => {
    e.preventDefault();
    setSubmissionStatus('sending');
    
    try {
      const response = await fetch('https://webhook.site/unique-id-here', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(formData),
      });

      if (response.ok) {
        setSubmissionStatus('success');
        setFormData({ nome: '', telefone: '', email: '', interesse: 'venda' });
      } else {
        throw new Error('Falha no envio');
      }
    } catch (error) {
      setSubmissionStatus('error');
    }
  };

  return (
    <div className="min-h-screen bg-gradient-to-br from-slate-50 to-slate-100">
      <header className="bg-white shadow-sm border-b sticky top-0 z-50">
        <div className="container mx-auto px-4 py-4 flex justify-between items-center">
          <img src="https://i.imgur.com/O19eS1V.png" alt="SB Investimentos" className="h-10" />
        </div>
      </header>

      <section className="bg-gradient-to-r from-red-900 via-red-800 to-orange-600 text-white py-20">
        <div className="container mx-auto px-4 text-center">
          <h1 className="text-4xl md:text-6xl font-bold mb-6">
            Venda ou Alugue <span className="text-orange-300">Seu Imóvel</span> com Especialistas
          </h1>
          <p className="text-lg md:text-xl mb-8 text-red-100 max-w-3xl mx-auto">
            Marketing profissional, gestão completa e mais de 13 anos de experiência no mercado imobiliário de Curitiba.
          </p>
          <button 
            onClick={() => document.getElementById('formulario').scrollIntoView({behavior: 'smooth'})}
            className="bg-orange-500 hover:bg-orange-600 text-white px-8 py-4 text-lg font-semibold rounded-full"
          >
            Quero uma Avaliação Gratuita
          </button>
        </div>
      </section>

      <section id="formulario" className="py-20 bg-white">
        <div className="container mx-auto px-4">
          <div className="max-w-2xl mx-auto">
            <h2 className="text-3xl font-bold text-center mb-8">Solicite sua Avaliação Gratuita</h2>
            <div className="p-8 shadow-xl rounded-xl bg-white border">
              {submissionStatus === 'success' ? (
                <div className="text-center py-10">
                  <h3 className="text-2xl font-semibold mb-2">Obrigado!</h3>
                  <p className="text-gray-600">Nossa equipe entrará em contato em breve.</p>
                </div>
              ) : (
                <form onSubmit={handleSubmit} className="space-y-6">
                  <input 
                    type="text" 
                    name="nome" 
                    required 
                    value={formData.nome} 
                    onChange={handleInputChange} 
                    className="w-full px-4 py-3 border rounded-lg" 
                    placeholder="Nome completo" 
                  />
                  <input 
                    type="tel" 
                    name="telefone" 
                    required 
                    value={formData.telefone} 
                    onChange={handleInputChange} 
                    className="w-full px-4 py-3 border rounded-lg" 
                    placeholder="WhatsApp" 
                  />
                  <input 
                    type="email" 
                    name="email" 
                    required 
                    value={formData.email} 
                    onChange={handleInputChange} 
                    className="w-full px-4 py-3 border rounded-lg" 
                    placeholder="E-mail" 
                  />
                  <select 
                    name="interesse" 
                    required 
                    value={formData.interesse} 
                    onChange={handleInputChange} 
                    className="w-full px-4 py-3 border rounded-lg"
                  >
                    <option value="venda">Quero Vender meu Imóvel</option>
                    <option value="locacao">Quero Alugar meu Imóvel</option>
                    <option value="ambos">Tenho interesse em Ambos</option>
                  </select>
                  <button 
                    type="submit" 
                    className="w-full bg-red-900 hover:bg-red-800 text-white py-4 text-lg font-semibold rounded-full"
                    disabled={submissionStatus === 'sending'}
                  >
                    {submissionStatus === 'sending' ? 'Enviando...' : 'Quero uma Avaliação Gratuita'}
                  </button>
                </form>
              )}
            </div>
          </div>
        </div>
      </section>
    </div>
  );
}

export default App;
